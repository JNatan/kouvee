<h2 style="text-align:center; margin-bottom:20px;">
  <%= customer ? 'Edit' : 'Tambah' %> Customer
</h2>

<form method="post" 
      action="<%= customer ? '/customers/' + customer.id_customer + '?_method=PUT' : '/customers' %>" 
      style="max-width:500px; margin:auto; display:flex; flex-direction:column; gap:15px;">

  <label for="nama">Nama</label>
  <input id="nama" name="nama" type="text"
         value="<%= customer ? customer.nama_customer : '' %>"
         placeholder="Masukkan nama customer"
         required
         style="padding:8px; border:1px solid #ccc; border-radius:5px;">

  <label for="alamat">Alamat</label>
  <!-- Ganti input jadi textarea -->
  <textarea id="alamat" name="alamat" rows="4"
            placeholder="Masukkan alamat lengkap"
            style="padding:8px; border:1px solid #ccc; border-radius:5px; resize:vertical;"><%= customer ? customer.alamat_customer : '' %></textarea>

  <label for="tanggal_lahir">Tanggal Lahir</label>
  <input id="tanggal_lahir" type="date" name="tanggal_lahir"
         value="<%= customer && customer.tanggal_lahir_customer ? (new Date(customer.tanggal_lahir_customer)).toISOString().slice(0,10) : '' %>"
         style="padding:8px; border:1px solid #ccc; border-radius:5px;">

  <label for="no_telp">No. Telepon</label>
  <input id="no_telp" name="no_telp" type="text"
         value="<%= customer ? customer.no_telp_customer : '' %>"
         placeholder="08xxxxxxxxxx"
         required
         style="padding:8px; border:1px solid #ccc; border-radius:5px;">

  <button type="submit"
          style="padding:10px; background-color:#007bff; color:white; border:none; border-radius:5px; cursor:pointer;">
    Simpan
  </button>
</form>
