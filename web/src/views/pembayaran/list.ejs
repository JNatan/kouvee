<h2 style="text-align:center; margin-bottom:20px;">Transaksi Belum Lunas</h2>

<table class="table sleek" 
       style="width:90%; margin:auto; border-collapse:collapse; text-align:center;">

  <thead>
    <tr>
      <th>ID</th>
      <th>Customer</th>
      <th>Total</th>
      <th>Diskon</th>
      <th>Total Setelah Diskon</th>
      <th>Sudah Dibayar</th>
      <th>Sisa</th>
      <th>Aksi</th>
    </tr>
  </thead>

  <tbody>
    <% transaksi.forEach(t => { %>
      <tr>
        <td><%= t.id_transaksi %></td>
        <td><%= t.nama_customer %></td>
        <td>Rp <%= t.total.toLocaleString() %></td>
        <td>Rp <%= t.diskon.toLocaleString() %></td>
        <td>Rp <%= t.total_setelah_diskon.toLocaleString() %></td>
        <td>Rp <%= t.bayar_total.toLocaleString() %></td>
        <td>Rp <%= t.sisa.toLocaleString() %></td>
        <td>
          <a href="/pembayaran/view/<%= t.id_transaksi %>" class="btn small">Detail</a>
          <a href="/pembayaran/edit/<%= t.id_transaksi %>" class="btn small warning">Edit</a>
          <a href="/pembayaran/bayar/<%= t.id_transaksi %>" class="btn small">Bayar</a>
        </td>
      </tr>
    <% }) %>
  </tbody>

</table>
