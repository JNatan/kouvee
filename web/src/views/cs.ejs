<!DOCTYPE html>
<html>
<head>
  <title><%= title %></title>
  <link rel="stylesheet" href="/public/style.css">
</head>
<body>
  <h1>Halo, <%= user.nama_pegawai %> (Customer Service)</h1>
  <h2>Data Customer</h2>
  <table border="1" cellpadding="6">
    <tr><th>ID</th><th>Nama</th><th>Alamat</th><th>No. Telp</th></tr>
    <% customers.forEach(c => { %>
      <tr>
        <td><%= c.id_customer %></td>
        <td><%= c.nama_customer %></td>
        <td><%= c.alamat_customer %></td>
        <td><%= c.no_telp_customer %></td>
      </tr>
    <% }) %>
  </table>

  <h2>Data Hewan</h2>
  <table border="1" cellpadding="6">
    <tr><th>ID</th><th>Nama Hewan</th><th>Jenis</th><th>Customer</th></tr>
    <% hewan.forEach(h => { %>
      <tr>
        <td><%= h.id_hewan %></td>
        <td><%= h.nama_hewan %></td>
        <td><%= h.jenis_hewan %></td>
        <td><%= h.nama_customer %></td>
      </tr>
    <% }) %>
  </table>

  <a href="/logout">Logout</a>
</body>
</html>
