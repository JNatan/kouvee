<h2 style="text-align:center; margin-bottom:20px;">
  <%= layanan ? 'Edit' : 'Tambah' %> Layanan
</h2>

<form method="post" 
      action="<%= layanan ? '/layanan/' + layanan.id_layanan + '?_method=PUT' : '/layanan' %>"
      style="max-width:500px; margin:auto; display:flex; flex-direction:column; gap:15px;">

  <label>Nama Layanan</label>
  <input name="nama" value="<%= layanan ? layanan.nama_layanan : '' %>" required>

  <label>Deskripsi</label>
  <!-- Ganti jadi textarea biar bisa panjang -->
  <textarea name="deskripsi" rows="3" placeholder="Masukkan deskripsi layanan"><%= layanan ? layanan.deskripsi_layanan : '' %></textarea>

  <label>Harga</label>
  <input type="number" name="harga" value="<%= layanan ? layanan.harga_layanan : '' %>" required>

  <button type="submit" 
          style="padding:10px; background-color:#007bff; color:white; border:none; border-radius:5px;">
    Simpan
  </button>
</form>
